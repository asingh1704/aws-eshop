{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "api_route": {
        "ClusterId": "api_cluster",
        "Match": {
          "Path": "/catalog/{**catchall}" // Matches all requests
        },
        "AuthorizationPolicy": "ApiPolicy" // Apply default authorization policy
      }
    },
    "Clusters": {
      "api_cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5004"
          }
        }
      }
    }
  }
}